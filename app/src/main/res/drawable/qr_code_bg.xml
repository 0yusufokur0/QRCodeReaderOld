<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners
                    android:bottomLeftRadius="@dimen/auth_rounded_num"
                    android:bottomRightRadius="@dimen/auth_rounded_num"
                    android:topLeftRadius="@dimen/auth_rounded_num"
                    android:topRightRadius="@dimen/auth_rounded_num"/>

            <gradient
                    android:centerY="10"
                    android:type="sweep"
                    android:startColor="#7C000000"
                    android:endColor="#7C000000"
                    android:centerColor="#7E000000"/>

        </shape>


    </item>
    <item
            android:top="8dp"
            android:bottom="8dp"
            android:right="8dp"
            android:left="8dp">

        <shape>
            <corners
                    android:bottomLeftRadius="@dimen/auth_rounded_num"
                    android:bottomRightRadius="@dimen/auth_rounded_num"
                    android:topLeftRadius="@dimen/auth_rounded_num"
                    android:topRightRadius="@dimen/auth_rounded_num"/>
            <solid android:color="#00FFFFFF"/>
        </shape>
    </item>


</layer-list>

